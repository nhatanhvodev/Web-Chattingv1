{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd socket && npm ci",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_20"]
        },
        "install": {
          "cmds": ["cd socket && npm ci --omit=dev"]
        },
        "build": {
          "cmds": ["echo 'Skip build - socket service ready'"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "node socket/socket-server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300
  }
}
